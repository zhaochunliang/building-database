extends layout

block content
  h1 Add a building

  form#add-form
    label(for="name") Name:
    input#name(type="text", name="name", required)

    label(for="model") Model:
    input#model(type="file", name="model", accept=".obj,.dae,.ply,.dxf", required)

    button#add-button(type="submit") Add building

