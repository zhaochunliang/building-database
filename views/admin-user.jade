extends layout
 
block content
  section.container
    div.col-7
      h1
        | #{profile.username}
        span
          a(href="/admin/users") Back to users
        
      if message && message.length > 0
          div.flash-success
            span #{message}

        form(action="/admin/user/#{profile.id}", method="POST")
          label(for="website") Website:
          input(type="text", name="website", placeholder="Website" value=(profile.website) ? profile.website : "")

          label(for="twitter") Twitter:
          input(type="text", name="twitter", placeholder="Twitter handle" value=(profile.twitter) ? profile.twitter : "")
          button(type="submit") Update user